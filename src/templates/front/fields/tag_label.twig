{% extends "fields/_field" %}

{% block content %}
    <ul class="tag-list {% if options.displayAsBadge %}p-0{% endif %}">
        {% for tag in value %}
            {% include "_components/badge" with {
                color: options['bg-color'],
                pill: options.pill,
                classes: 'py-2 px-3',
                label: tag.title,
                tag: 'li'
            } only %}
        {% endfor %}
    </ul>
{% endblock %}