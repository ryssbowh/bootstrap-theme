{% set type = type ?? 'primary' %}
{% set dismissable = dismissable ?? true %}
{% set show = show ?? true %}
{% set message = message is defined ? message : false %}

{% if message %}
    <div class="alert alert-{{ type }}{{ dismissable ? ' alert-dismissible' : '' }}{{ show ? ' show' : '' }} fade" role="alert">
        {{ message }}
        {% if dismissable %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
        {% endif %}
    </div>
{% endif %}