{% set color = color ?? 'primary' %}
{% set label = label ?? false %}
{% set pill = pill ?? false %}
{% set tag = tag ?? 'span' %}
{% set classes = classes ?? false %}

{% if label %}
    <{{ tag }} class="badge bg-{{ color }}{% if pill %} rounded-pill{% endif %}{% if classes %} {{ classes }}{% endif %}">{{ label }}</{{ tag }}>
{% endif %}